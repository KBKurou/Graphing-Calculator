<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/func_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/function_index"
        android:padding="2dp"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_background_flat"
        android:text="#" />
    <EditText
        android:id="@+id/func"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:padding="12dp"
        android:background="@android:color/transparent"
        android:fontFamily="@string/settings_math_font"
        android:inputType="text"
        android:text="Function" />
    <ImageView
        android:id="@+id/error"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:visibility="invisible"
        android:src="@drawable/ic_error_black_24dp" />
    <ImageView
        android:id="@+id/graph_color"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:background="@drawable/rectangle_background_flat"
        android:visibility="invisible"
        android:src="@drawable/ic_multiline_chart_black_24dp" />
    <ImageButton
        android:id="@+id/function_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close_black_24dp" />
</FrameLayout>